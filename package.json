{
  "name": "garbage-classification",
  "version": "1.0.0",
  "description": "garbage-deskapp",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "cross-env NODE_ENV=production electron-builder"
  },
  "author": "MeverikC",
  "license": "MIT",
  "dependencies": {
    "ps-tree": "^1.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "productName": "GarbageSort",
    "appId": "com.example.Garbage",
    "copyright": "MeverikC",
    "directories": {
      "output": "out"
    },
    "files": [
      "out/electron/**/*",
      "node_modules/",
      "package.json",
      "main.js"
    ],
    "win": {
      "icon": "static/favicon.ico",
      "target": [
        {
          "target": "nsis"
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./static/favicon.ico",
      "uninstallerIcon": "./static/uninstall.ico",
      "installerHeaderIcon": "./static/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GarbageSort"
    },
    "extraResources": [
      {
        "from": "dist",
        "to": "app/dist"
      }
    ]
  }
}
